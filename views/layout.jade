doctype html
html(lang="en")
  head
    title TripViewer: View and Export your Automatic Trips
    meta(http-equiv="content-type" content="text/html; charset=utf-8")
    meta(http-equiv="X-UA-Compatible" content="chrome=1")
    meta(name="description" content="View and Export your Automatic Trips")
    link(rel="stylesheet" type="text/css" href="/bower_components/bootstrap/dist/css/bootstrap.min.css" media="screen")
    link(rel="stylesheet" type="text/css" href="/css/style.css" media="screen")
    link(rel="stylesheet" type="text/css" href="/bower_components/mapbox.js/mapbox.css")
  body
    .github-fork-ribbon-wrapper
      .github-fork-ribbon
        a(href="https://github.com/Automatic/tripviewer") Fork me on GitHub
        
    .mainHeader
      .wrapper
        a.logo(href="http://automatic.com")
        .titlebar
          h1 TripViewer
          .tagline View and Export your Automatic Trips
          
        if loggedIn
          nav#topmenu.navbar.navbar-default(role="navigation")
            .navbar-header
              button.navbar-toggle(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
                      
            .collapse.navbar-collapse
              ul.nav.navbar-nav
                li(class=(menu === 'summary' ? 'active' : ''))
                  a(href="/") Summary
                li(class=(menu === 'trips' ? 'active' : ''))
                  a(href="/trips") Trips
                li(class=(menu === 'vehicles' ? 'active' : ''))
                  a(href="/vehicles") Vehicles
                li.dropdown
                  a#export.dropdown-toggle(href="#" data-toggle="dropdown") <span>Export All</span> <b class="caret"></b>
                  ul.dropdown-menu(role="menu")
                    li
                      a#csv(href="/download/trips.csv" target="_blank") as .csv
                    li
                      a#json(href="/api/trips/" target="_blank") as JSON
                      
              ul.nav.navbar-nav.navbar-right
                li
                  a#logout(href="/logout/") Log Out

    block content
        
    script(src="/bower_components/polyline/src/polyline.js")
    script(src="/bower_components/jquery/dist/jquery.min.js")
    script(src="/bower_components/underscore/underscore-min.js")
    script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js")
    script(src="/bower_components/moment/min/moment.min.js")
    script(src="/bower_components/moment-timezone/builds/moment-timezone-with-data-2010-2020.min.js")
    script(src="/bower_components/d3/d3.min.js")

    script(src="/javascripts/helper.js")
    script(src="/javascripts/data.js")
    script(src="/javascripts/main.js")

    block scripts
